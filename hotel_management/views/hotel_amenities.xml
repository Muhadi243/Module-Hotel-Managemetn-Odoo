<odoo>
    <!-- Form View for Hotel Amenities -->
    <record id="view_hotel_amenities_form" model="ir.ui.view">
        <field name="name">hotel.amenities.form</field>
        <field name="model">hotel_management.amenities</field>
        <field name="arch" type="xml">
            <form string="Hotel Amenities">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="icon" widget="image"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hotel_amenities_tree" model="ir.ui.view">
        <field name="name">hotel.amenities.tree</field>
        <field name="model">hotel_management.amenities</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="icon" widget="image"/>

            </tree>
        </field>
    </record>
</odoo>
