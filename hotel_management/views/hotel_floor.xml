<odoo>
    <!-- Form View for Hotel Floor -->
    <record id="view_hotel_floor_form" model="ir.ui.view">
        <field name="name">hotel.floor.form</field>
        <field name="model">hotel_management.floor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager_ids" widget="many2one_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hotel_floor_tree" model="ir.ui.view">
        <field name="name">hotel.floor.tree</field>
        <field name="model">hotel_management.floor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manager_ids"/>
            </tree>
        </field>
    </record>

</odoo>
