<odoo>
    <!-- Form View for Hotel Services -->
    <record id="view_hotel_services_form" model="ir.ui.view">
        <field name="name">hotel.services.form</field>
        <field name="model">hotel_management.services</field>
        <field name="arch" type="xml">
            <form string="Hotel Service">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Hotel Services -->
    <record id="view_hotel_services_tree" model="ir.ui.view">
        <field name="name">hotel.services.tree</field>
        <field name="model">hotel_management.services</field>
        <field name="arch" type="xml">
            <tree string="Hotel Services">
                <field name="name"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- Action for Hotel Services -->

</odoo>
